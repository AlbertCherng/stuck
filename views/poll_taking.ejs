<div class="jumbotron">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="table">
        <h2> Rank your order </h2>
        <h3><%= poll.title %></h3>
        <h4><%= poll.description %></h4>
        <form id="takePoll" action="" method="POST" class="form-inline">
          <ul id="sortable">
            <% for (choice of choices) { %>
            <li class="choice">
              <%= choice.title %>
              <%= choice.description %>
