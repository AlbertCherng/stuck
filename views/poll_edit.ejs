<% include ./partials/_header %>

<article data-poll-id="<%= poll %>">
<div class="row">
  <div class="col-md-4 col-md-offset-3">
   <div class="form-group">
    <label for="pollTitle">Title</label>
    <input type="text" class="form-control" name="title" id="pollTitle" placeholder="What are you trying to describe?">
</div>
</div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
  <div class="form-group">
    <label for="pollDescription">Describe it.</label>
    <textarea class="form-control" rows="3" id="pollDescription" placeholder="Uh huh uh huh, makes sense."></textarea>
</div>
</div>
</div>
</article>

<article data-choice>
<div class="row">
  <div class="col-md-4 col-md-offset-3">
