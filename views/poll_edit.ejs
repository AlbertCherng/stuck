<% include ./partials/_header %>
<form class="poll">
<article data-poll-id="<%= poll %>">
<div class="row">
  <div class="col-md-4 col-md-offset-3">
   <div class="form-group">
    <label for="pollTitle">Title</label>
    <input type="text" data-poll-id = "<%= poll %>" class="form-control" name="title" id="pollTitle" placeholder="What are you trying to describe?">
</div>
</div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
  <div class="form-group">
    <label for="pollDescription">Describe it.</label>
    <textarea class="form-control" name="description" rows="3" id="pollDescription" placeholder="Uh huh uh huh, makes sense."></textarea>
</div>
</div>
</div>
</article>


<div class="choices">
<h2>Enter Choices:</h2>
<% for (choice of choices) { %>

  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <div class="form-group">
        <input type="text" class="form-control" name="choices[][title]" placeholder="Choice" value="<%= choice.title %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-3">
    <div class="form-group">
      <textarea class="form-control" rows="2" name="choices[][description]" placeholder="Uh huh uh huh, makes sense."><%= choice.description %></textarea>
    </div>
  </div>
</div>

<% } %>

</div>
<div class="row">
    <div class="col-md-4 col-md-offset-3">
      <div class="addChoice"><button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-download" aria-hidden="true"></span></button></div>
    </div>
  </div>
<div class="participants">
<h2>Enter Participants:</h2>

<% for (participant of participants) { %>


<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <div class="form-group">
      <input type="email" class="form-control" name="participants[][email]" placeholder="enter email" value="<%= participant.email %>">
    </div>
  </div>
</div>

<% } %>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-3">
<div class="addParticipant"><button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-download" aria-hidden="true"></span></button></div>
</div>
</div>


</form>

<% include ./partials/_footer %>
